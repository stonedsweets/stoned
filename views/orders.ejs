<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Stoned Sweets</title>
        <link rel="icon" href="/images/pp.jpg" type="image/x-icon">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Merienda:wght@300..900&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/css/styles.css"> <!-- Your custom CSS file -->
    </head>
<body>
    <header class="navbar">
        <img src="/images/logo.png">
        <h1>Orders</h1>
        <nav>
            <ul>
                <li><a href="/admin">Home</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <h2>All Orders</h2>
        <ul id="order-list">
            <% orders.forEach(order => { %>
                <li class="order">
                    <h3>Order Number: <%= order.orderNumber %></h3>
                    <p>Table Number: <%= order.tableNumber %></p> <!-- New line for Table Number -->
                    <p>Placed At: <%= order.placedAt.toLocaleString() %></p>
                    <p>Total Price: <%= new Intl.NumberFormat('en-KE', { style: 'currency', currency: 'KES' }).format(order.totalPrice) %></p>
                    <h4>Items:</h4>
                    <ul>
                        <% order.items.forEach(item => { %>
                            <li>
                                <p><%= item.name %> - KES <%= item.price %> x <%= item.quantity %></p>
                            </li>
                        <% }); %>
                    </ul>
                    <form action="/orders/clear/<%= order._id %>" method="POST">
                        <button type="submit">Mark as Cleared</button>
                    </form>
                </li>
            <% }); %>
        </ul>
    </main>
    
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section links">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/about">About</a></li>
                </ul>
            </div>
        <div class="footer-bottom">
            <p>&copy; 2024 Stonedsweets. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
