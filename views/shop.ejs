<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Stoned Sweets</title>
        <link rel="icon" href="/images/pp.jpg" type="image/x-icon">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Merienda:wght@300..900&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/css/styles.css"> <!-- Custom CSS -->
    </head>
<body>
    <header class="navbar">
        <h1>Welcome to Stoned Sweets</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/contact">Contact</a></li>
                <li><a href="#" id="cart-link">Cart (<span id="cart-count">0</span>)</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <ul id="item-list">
            <% items.forEach(item => { %>
                <li class="item" data-category="<%= item.category %>">
                    <img src="<%= item.imageUrl %>" alt="<%= item.name %>">
                    <div>
                        <h3><%= item.name %></h3>
                        <p>Price: <%= new Intl.NumberFormat('en-KE', { style: 'currency', currency: 'KES' }).format(item.price) %></p>
                        <button onclick="addToCart('<%= item._id %>', '<%= item.name %>', <%= item.price %>)">Add to Cart</button>
                    </div>
                </li>
            <% }); %>
        </ul>
    </main>

    <!-- Cart Modal -->
    <div id="cart-modal" class="modal">
        <div class="modal-content">
            <span class="close" id="close-cart-modal">&times;</span>
            <h2>Your Cart</h2>
            <ul id="cart-list"></ul>
            <div id="cart-total"></div>
            <label for="phone-number">Phone number:</label>
            <input type="text" id="phone-number" name="phone-number" placeholder="07XXXXXXXX" required>

            <label for="payment-method">Payment Method:</label>
            <select id="payment-method" name="payment-method" required>
                <option value="mobile-money">Mobile Money</option>
                <option value="cash">Cash</option>
            </select>
            <button id="place-order-btn">Place Order</button>
        </div>
    </div>

    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section links">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/about">About</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 Stonedsweets. All rights reserved.</p>
        </div>
    </footer>

    <script>
        // Load the cart on page load
        document.addEventListener('DOMContentLoaded', () => {
            loadCart();
            updateCartCount();
        });

        // Cart functions
        function addToCart(id, name, price) {
            let cart = JSON.parse(localStorage.getItem('cart')) || [];
            const existingItemIndex = cart.findIndex(item => item.id === id);

            if (existingItemIndex > -1) {
                cart[existingItemIndex].quantity += 1;
            } else {
                cart.push({ id, name, price, quantity: 1 });
            }

            localStorage.setItem('cart', JSON.stringify(cart));
            updateCartCount();
            displayAddToCartMessage(name);
        }

        function removeFromCart(id) {
            let cart = JSON.parse(localStorage.getItem('cart')) || [];
            const itemIndex = cart.findIndex(item => item.id === id);

            if (itemIndex > -1) {
                cart.splice(itemIndex, 1);
                localStorage.setItem('cart', JSON.stringify(cart));
                loadCart();
                updateCartCount();
            }
        }

        function loadCart() {
            let cart = JSON.parse(localStorage.getItem('cart')) || [];
            const cartList = document.getElementById('cart-list');
            cartList.innerHTML = '';

            let total = 0;
            cart.forEach(item => {
                const cartItem = document.createElement('li');
                cartItem.classList.add('cart-item');
                cartItem.innerHTML = `
                    <div>
                        <h3>${item.name}</h3>
                        <p>${new Intl.NumberFormat('en-KE', { style: 'currency', currency: 'KES' }).format(item.price)} x ${item.quantity}</p>
                    </div>
                    <button onclick="removeFromCart('${item.id}')">Remove</button>
                `;
                total += item.price * item.quantity;
                cartList.appendChild(cartItem);
            });

            const totalElement = document.getElementById('cart-total');
            totalElement.textContent = `Total: ${new Intl.NumberFormat('en-KE', { style: 'currency', currency: 'KES' }).format(total)}`;
        }

        function updateCartCount() {
            const cart = JSON.parse(localStorage.getItem('cart')) || [];
            const cartCount = cart.reduce((count, item) => count + item.quantity, 0);
            document.getElementById('cart-count').textContent = cartCount;
        }

        function displayAddToCartMessage(itemName) {
            const message = document.createElement('div');
            message.classList.add('cart-message');
            message.textContent = `${itemName} has been added to your cart.`;
            document.body.appendChild(message);
            setTimeout(() => message.remove(), 2000);
        }

        function placeOrder() {
            const cart = JSON.parse(localStorage.getItem('cart')) || [];
            if (cart.length === 0) {
                alert('Your cart is empty. Please add items to the cart before placing an order.');
                return;
            }

            const phoneNumber = document.getElementById('phone-number').value;
            const paymentMethod = document.getElementById('payment-method').value;

            if (!/^(07|01)\d{8}$/.test(phoneNumber)) {
                alert('Please enter a valid phone number.');
                return;
            }

            if (!phoneNumber || !paymentMethod) {
                alert('Please fill in all details before placing an order.');
                return;
            }

            const orderData = { cart, phoneNumber, paymentMethod };

            fetch('/place-order', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(orderData),
            })
            .then(response => {
                if (response.ok) return response.json();
                throw new Error('Failed to place order');
            })
            .then(data => {
                alert('Your order has been placed successfully!');
                localStorage.removeItem('cart');
                loadCart();
                updateCartCount();
            })
            .catch(error => {
                console.error('Error placing order:', error);
                alert('Failed to place order. Please try again later.');
            });
        }

        // Modal logic
        const cartLink = document.getElementById('cart-link');
        const cartModal = document.getElementById('cart-modal');
        const closeCartModal = document.getElementById('close-cart-modal');

        cartLink.onclick = function(event) {
            event.preventDefault();
            cartModal.style.display = 'block';
            loadCart();
        };

        closeCartModal.onclick = function() {
            cartModal.style.display = 'none';
        };

        window.onclick = function(event) {
            if (event.target === cartModal) {
                cartModal.style.display = 'none';
            }
        };

        // Event listener for placing order
        document.getElementById('place-order-btn').addEventListener('click', placeOrder);
    </script>
</body>
</html>
