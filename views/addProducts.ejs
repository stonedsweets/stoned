<body>
    <header class="navbar">
        <img src="/images/logo.png" alt="MiniEats Logo">
        <h1>MiniEats</h1>
    </header>
    <main>
    <h1>Add New Product</h1>
    <form action="/addProducts" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required><br><br>

        <label for="priceInKES">Price in KES:</label>
        <input type="number" id="priceInKES" name="priceInKES" step="0.01" required><br><br>

        <label for="category">Category:</label>
        <select id="category" name="category" required>
            <option value="breakfast">Breakfast</option>
            <option value="lunch">Lunch</option>
            <option value="dinner">Dinner</option>
            <option value="beverages">Beverages</option>
            <option value="desserts">Desserts</option>
            <option value="fast foods">Fast foods</option>
        </select>

        <label for="imageUrl">Image URL:</label>
        <input type="url" id="imageUrl" name="imageUrl" required><br><br>

        <button type="submit">Add Product</button>
    </form>
    <a href="/admin">Back to Admin Page
    </a></main>
